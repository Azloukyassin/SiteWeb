
@model SiteWeb.Files

@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        body, html {
            /* The image used */
            background-image: url('../../Images/christelle-hayek-aw4lQ6U4HX8-unsplash.jpg');
            /* Full height */
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
        }

        #all {
            position: fixed;
            width: 500px;
            height: 200px;
            top: 50%;
            left: 50%;
            margin-top: -100px; /* Negative half of height. */
            margin-left: -250px; /* Negative half of width. */
        }

        label {
            color: white;
        }
        #button {
            margin-top:500px;
        }
    </style>
</head>

<form id="all" method="post" enctype="multipart/form-data">
    <h2>Exercice Upload</h2>
    <label>
        Sélectionnez un fichier texte (.PDF etc.) sur votre ordinateur.
        <input name="datei" type="file" size="50" accept="text/*">
    </label>
    <button>Envoyer</button>

</form>
<a href="@Url.Action("Index", "FirstLayout")" id="button" class="btn btn-info"> Retourn</a>


